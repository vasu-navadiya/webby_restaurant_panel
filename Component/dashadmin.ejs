let previousCount = 0;
let newBookingNotified = false; // To prevent repeated alerts

async function checkNewBookings() {
  try {
    const response = await fetch('/api/booking-count');
    const data = await response.json();
    const currentCount = data.totalBooking;

    // Check for new booking only once
    if (currentCount > previousCount && !newBookingNotified) {
      newBookingNotified = true; // Prevent further alerts
      alert(`New booking received! Total bookings: ${currentCount}`);
      window.location.reload(); // Refresh the page
    }

    previousCount = currentCount;
  } catch (error) {
    console.error("Error fetching booking count:", error);
  }
}

// Fetch the initial count when the page loads
async function initializeBookingCount() {
  try {
    const response = await fetch('/api/booking-count');
    const data = await response.json();
    previousCount = data.totalBooking;
  } catch (error) {
    console.error("Error fetching initial booking count:", error);
  }
}

// Initialize count and start checking every 5 seconds
document.addEventListener('DOMContentLoaded', async () => {
  await initializeBookingCount();
  setInterval(checkNewBookings, 5000);
});

document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuToggle = document.getElementById('mobileMenuToggle');
    const sidebar = document.querySelector('.sidebar');
    const content = document.querySelector('.content');

    // Toggle sidebar
    mobileMenuToggle.addEventListener('click', function() {
        sidebar.classList.toggle('show');
    });

    // Close sidebar when clicking outside
    content.addEventListener('click', function() {
        if (window.innerWidth <= 768 && sidebar.classList.contains('show')) {
            sidebar.classList.remove('show');
        }
    });

    // Close sidebar when a nav link is clicked
    document.querySelectorAll('.nav-link').forEach(link => {
        link.addEventListener('click', function() {
            if (window.innerWidth <= 768) {
                sidebar.classList.remove('show');
            }
        });
    });

    // Adjust on window resize
